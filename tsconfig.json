{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types", "/usr/local/lib/node_modules"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "../",
    "outDir": "./lib",
    "noEmit": true
  },
  "include": ["tests/*.spec.ts"],
  "exclude": ["node_modules"]

}
